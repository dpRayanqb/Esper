{
  "name": 
"  Rayan1",
  "description": "Minimal example for recording any screen/window in manifest V3, allowing redirection on current tab",
  "version": "1.0",
  "manifest_version": 3,
  "action":{
    "default_popup":"popup.html"
  },
  "icons": {
    "16": "logo.png",
    "48": "logo.png",
    "128": "logo.png"
  },
  

 "host_permissions": [
        "http://*/",
        "https://*/*"
    ],
 
  
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches":["<all_urls>"],
      "js":["content.js"]
    }
  ],
  "permissions": ["tabs",
  "storage",
  "activeTab",
  "desktopCapture"]
}